{
    "name": "MCPEDL Plus",
    "version": "1.0",
    "description": "Dark mode, Infinite Scrolling and more!",
    "manifest_version": 2,
    "icons": {
        "64": "images/icon.png"
    },
    "permissions": [
        "*://*.mcpedl.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "64": "images/icon.png"
        }
    },
    "content_scripts": [
        {
          "matches": ["*://*.mcpedl.com/*"],
          "js": ["node_modules/jquery/dist/jquery.min.js","content.js"],
          "css" : ["content.css"],
          "run_at": "document_end"
        }
    ]
}